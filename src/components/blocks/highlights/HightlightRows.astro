---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import oriental1 from '../../../assets/foodmenu/oriental_food/oriental1.jpeg'

import massage1 from '../../../assets/massage/massage1.jpeg'

import laundry from '../../../assets/laundry/laundry1.jpeg'

import bike from '../../../assets/bikerent/bike1.jpeg'

import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
	link: string
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Aneka Menu <strong>Makanan</strong>',
		text: 'Sinom Resto adalah tempat yang sempurna untuk menikmati cita rasa autentik dan modern dari berbagai pilihan menu terbaik. Kami menyajikan hidangan berkualitas yang terinspirasi dari warisan kuliner Nusantara dan internasional, dengan sentuhan inovasi khas yang memanjakan selera Anda.',
		image: oriental1,
		imageWidth: oriental1.width,
		imageHeight: oriental1.height,
		mobileImage: oriental1,
		imagePosition: 'right',
		link: '/menu'
	},
	{
		title: '<strong>Massage</strong> Services',
		text: 'Relaksasikan tubuh dan pikiran Anda dengan pijatan profesional. Pijatan kami dapat membantu meredakan ketegangan otot dan meningkatkan sirkulasi darah',
		image: massage1,
		mobileImage: massage1,
		imageWidth: massage1.width,
		imageHeight: massage1.height,
		imagePosition: 'left',
		link: '/massage'
	},
	{
		title: '<strong>Clean</strong> Laundry',
		text: 'Kami menyediakan layanan laundry yang praktis dan cepat. Serahkan pakaian kotor Anda kepada kami dan dapatkan kembali pakaian bersih dalam waktu singkat.',
		image: laundry,
		mobileImage: laundry,
		imageWidth: laundry.width,
		imageHeight: laundry.height,
		imagePosition: 'right',
		link: '/laundry'
	},
	{
		title: '<strong>Bike Rent</strong> Services',
		text: 'Jelajahi lingkungan sekitar dengan cara yang menyenangkan dan sehat. Sewa sepeda kami dan nikmati suasana alam yang segar.',
		image: bike,
		mobileImage: bike,
		imageWidth: bike.width,
		imageHeight: bike.height,
		imagePosition: 'left',
		link: '/bikerent'
	},
	{
		title: '<strong>Shuttle Bus</strong> Services',
		text: 'Nikmati kemudahan transportasi dengan layanan shuttle bus gratis kami. Kami akan mengantar Anda ke berbagai tempat menarik di sekitar hotel.',
		image: bike,
		mobileImage: bike,
		imageWidth: bike.width,
		imageHeight: bike.height,
		imagePosition: 'right',
		link: '/shuttle-bus'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
			link={highlight.link}
		/>
	))
}

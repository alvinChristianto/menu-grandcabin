---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
import { Image } from 'astro:assets'
// - UI
import Feature from '../components/blocks/featureses/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import StickySidebar from '../components/blocks/basic/StickySidebar.astro'
// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const menuIndonesian = featuresData.filter((feature) => feature.category === 'indonesianFood')
const menuOriental = featuresData.filter((feature) => feature.category === 'orientalFood')
const menuWestern = featuresData.filter((feature) => feature.category === 'westernFood')
const featuresIntegrations = featuresData.filter((feature) => feature.category === 'Integrations')
const featuresSupport = featuresData.filter((feature) => feature.category === 'Support')

import massage1 from '../../src/assets/massage/massage1.jpeg'
import massage2 from '../../src/assets/massage/massage2.jpeg'

// - SEO
const SEO = {
	title: 'Cabin | Massage service di The Grand Cabin Hotel',
	description: 'The Grand Cabin Hotel menyediakan layanan service untuk pengunjung'
}
// - Page Header
const header = {
	title: 'Massage <strong>The Grand Cabin Hotel </strong>',
	text: 'Massage service <strong>terbaik </strong> dengan harga <strong> terjangkau </strong>',
	type: 'massage service'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} type={header.type} />

	<!-- MASSAGE -->
	<StickySidebar>
		<header slot="sidebar">
			<h3 class="text-3xl">Massage service</h3>
			<p class="text-lg leading-relaxed">Relaksasikan tubuh dan pikiran Anda dengan pijatan profesional. Pijatan kami dapat membantu meredakan ketegangan otot dan meningkatkan sirkulasi darah.</p>
		</header>

		<Row>
			<Col span="6">
				<Image
					src={massage1}
					alt="Foxi. The tailwind astro theme"
					class="shadow-2xl shadow-neutral-200 dark:shadow-neutral-950"
					format="webp"
				/>
				<div class="py-2">
					<p class="text-xl text-slate-900 dark:text-slate-200">Full Body Massage</p>
					<ul class="list-inside list-disc text-slate-900 dark:text-slate-200">
						<li>90 Menit (Rp 200.000)</li>
						<li>120 Menit (Rp 250.000)</li>
						<li>180 Menit (Rp 300.000)</li>
					</ul>
				</div>
			</Col>
		</Row>
	</StickySidebar>

	<!-- <CTA /> -->
</Layout>

import snack3 from '../../src/assets/foodmenu/Snack/snack3.jpeg'
import juice1 from '../../src/assets/foodmenu/jus/juice1.jpeg'


// - SEO
const SEO = {
	title: 'Cabin | Menu Makanan di The Grand Cabin Hotel',
	description: 'The Grand Cabin Hotel menyediakan berbagai menu makanan dengan harga terjangkau'
}
// - Page Header
const header = {
	title: 'Menu makanan <strong>The Grand Cabin Hotel </strong>',
	text: 'Menu makanan <strong>terbaik </strong> dengan harga <strong> terjangkau </strong>',
	type: "Makanan dan minuman"
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} type={header.type}/>

		<!-- INDONESIAN -->
	<StickySidebar>
		<header slot="sidebar">
			<h3 class="text-3xl">Indonesian Food</h3>
			<p class="text-lg leading-relaxed">Deskripsi</p>
		</header>

		<Row>
			<Col span="6">
				<Image
					src={indo1}
					alt="Foxi. The tailwind astro theme"
					class="translate-y-8 shadow-2xl shadow-neutral-200 dark:shadow-neutral-950"
					format="webp"
				/>
			</Col>
			<Col span="6">
				<Image
					src={indo2}

import Layout from '../layouts/Layout.astro'
import { Image } from 'astro:assets'
// - UI
import Feature from '../components/blocks/featureses/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

import Row from '../../src/components/ui/Row.astro'
import Col from '../../src/components/ui/Col.astro'
import StickySidebar from '../../src/components/blocks/basic/StickySidebar.astro'
// Data NOT USED
import featuresData from '../data/json-files/featuresData.json'

import indo1 from '../../src/assets/foodmenu/indonesian_food/indo1.jpeg'
import indo2 from '../../src/assets/foodmenu/indonesian_food/indo2.jpeg'
import indo3 from '../../src/assets/foodmenu/indonesian_food/indo3.jpeg'

import western1 from '../../src/assets/foodmenu/western_food/western1.jpeg'
import western2 from '../../src/assets/foodmenu/western_food/western2.jpeg'
